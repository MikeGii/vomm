{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "../node_modules",
    "../src",
    "../public"
  ]
}